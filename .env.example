# ===========================================
# FaceFind Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to version control
# ===========================================

# ===========================================
# SUPABASE
# ===========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# STRIPE
# ===========================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Connect
STRIPE_CONNECT_CLIENT_ID=ca_...

# ===========================================
# AWS (Rekognition)
# ===========================================
# Create IAM user with Rekognition permissions
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Rekognition Collection ID prefix (collections created per event)
AWS_REKOGNITION_COLLECTION_PREFIX=facefind_

# ===========================================
# OPTIONAL: STORAGE PROVIDER SWITCH
# ===========================================
# Default is Supabase storage. Set to s3 to route vault object operations via S3-compatible API.
# STORAGE_PROVIDER=supabase
# STORAGE_PROVIDER=s3
# STORAGE_S3_BUCKET_MEDIA=facefind-media
# STORAGE_S3_BUCKET_COVERS=facefind-covers
# STORAGE_S3_BUCKET_EVENTS=facefind-events
# STORAGE_S3_BUCKET_AVATARS=facefind-avatars
# STORAGE_S3_BUCKET_EXPORTS=facefind-exports
# STORAGE_S3_DEFAULT_BUCKET=
# STORAGE_S3_BUCKET_PREFIX=
# STORAGE_S3_REGION=
# STORAGE_S3_ENDPOINT=
# STORAGE_S3_FORCE_PATH_STYLE=false

# ===========================================
# APPLICATION
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=FaceFind

# ===========================================
# MOBILE (Expo)
# ===========================================
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
EXPO_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================
# NEXT_PUBLIC_MIXPANEL_TOKEN=
# NEXT_PUBLIC_POSTHOG_KEY=

# ===========================================
# OPTIONAL: ERROR TRACKING
# ===========================================
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to 'true' to enable debug logging
DEBUG=false
