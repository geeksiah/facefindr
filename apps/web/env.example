# FaceFindr Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE (Required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# APP URL (Required)
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# AWS REKOGNITION (Required for face recognition)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ===========================================
# STRIPE (Payments - Global)
# Get these from https://dashboard.stripe.com/apikeys
# ===========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ===========================================
# FLUTTERWAVE (Payments - Africa)
# Get these from https://dashboard.flutterwave.com/settings/apis
# ===========================================
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-...
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-...
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret-hash

# ===========================================
# PAYPAL (Payments - Global Alternative)
# Get these from https://developer.paypal.com/dashboard/applications
# ===========================================
PAYPAL_CLIENT_ID=your-client-id
PAYPAL_CLIENT_SECRET=your-client-secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your-webhook-id
