{
  "expo": {
    "name": "FaceFindr",
    "slug": "facefindr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "facefindr",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0ea5e9"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.facefindr.app",
      "infoPlist": {
        "NSCameraUsageDescription": "FaceFindr uses your camera to scan your face and find photos of you.",
        "NSPhotoLibraryUsageDescription": "FaceFindr uses your photo library to upload photos or use a photo for face scanning.",
        "NSFaceIDUsageDescription": "FaceFindr uses Face ID to secure your account."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0ea5e9"
      },
      "package": "com.facefindr.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FaceFindr to access your camera to scan your face."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow FaceFindr to access your photos for face scanning or uploading."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
